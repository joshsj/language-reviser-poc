{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "ES2016",
    "lib": ["dom", "ES2016"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "public/dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
